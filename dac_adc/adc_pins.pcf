# ADC Baby Step - Pin Constraints
# Target: iCE40 HX1K (adjust for your board)

# Clock - 12 MHz
set_io clk 21

# Trigger input (rising edge starts sweep)
set_io trigger_in 54

# ADC SPI (AD7476A)
set_io adc_cs_n  41
set_io adc_sclk  40
set_io adc_miso  39

# Status outputs
set_io busy 99
set_io done 98
